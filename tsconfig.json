{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@*": [
        "src/*"
      ],
      "@banmao/datav/*": [
        "packages/datav/*"
      ],
      "@banmao/procomponent/*": [
        "packages/procomponent/*"
      ],
      "@banmao/docs/*": [
        "packages/docs/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "node"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.js",
    "packages/**/*.jsx",
    "packages/**/*.vue",
    "env.d.ts",
    "docs/**/*.ts"
  ],
  "exclude": [
    "packages/datav/dist",
    "packages/procomponent/dist",
    "node_modules",
    "script"
  ]
}
